{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 4,
        "linebreaks": "windows",
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["mixin"]
            }
        ],
        "declaration-empty-line-before": [
            "always",
            {
                "except": ["first-nested", "after-comment"],
                "ignore": ["after-declaration"]
            }
        ],
        "function-calc-no-invalid": true
    }
}
